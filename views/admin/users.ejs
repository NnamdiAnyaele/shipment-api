<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | ShipTrack Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/stylesheets/style.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
  <%- include('../partials/header') %>

  <main class="flex-grow-1 py-4">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1 class="h3 mb-1">User Management</h1>
          <p class="text-muted mb-0">Manage user accounts and roles</p>
        </div>
        <span class="badge bg-danger">Admin Only</span>
      </div>

      <!-- Filters -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
          <div class="row g-3">
            <div class="col-md-4">
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control" id="searchInput" placeholder="Search users...">
              </div>
            </div>
            <div class="col-md-3">
              <select class="form-select" id="roleFilter">
                <option value="">All Roles</option>
                <option value="admin">Admin</option>
                <option value="manager">Manager</option>
                <option value="user">User</option>
              </select>
            </div>
            <div class="col-md-3">
              <select class="form-select" id="statusFilter">
                <option value="">All Status</option>
                <option value="true">Active</option>
                <option value="false">Inactive</option>
              </select>
            </div>
            <div class="col-md-2">
              <button type="button" class="btn btn-outline-secondary w-100" id="resetFilters">Reset</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Users Table -->
      <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>User</th>
                  <th>Email</th>
                  <th>Role</th>
                  <th>Status</th>
                  <th>Last Login</th>
                  <th>Joined</th>
                  <th class="text-end">Actions</th>
                </tr>
              </thead>
              <tbody id="usersTableBody">
                <tr>
                  <td colspan="7" class="text-center py-5">
                    <div class="spinner-border text-primary"></div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Pagination -->
      <nav class="mt-4">
        <ul class="pagination justify-content-center" id="pagination"></ul>
      </nav>
    </div>
  </main>

  <!-- Role Modal -->
  <div class="modal fade" id="roleModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Change User Role</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <form id="roleForm">
          <div class="modal-body">
            <p>Change role for: <strong id="roleUserName"></strong></p>
            <div class="mb-3">
              <label for="newRole" class="form-label">Select Role</label>
              <select class="form-select" id="newRole" required>
                <option value="user">User</option>
                <option value="manager">Manager</option>
                <option value="admin">Admin</option>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Update Role</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <%- include('../partials/scripts') %>

  <script>
    let currentPage = 1;
    let selectedUserId = null;

    document.addEventListener('DOMContentLoaded', async function() {
      if (!Auth.requireAuth()) return;
      
      // Check admin access
      const user = Auth.getUser();
      if (user.role !== 'admin') {
        App.showToast('Admin access required', 'error');
        window.location.href = '/dashboard';
        return;
      }

      await loadUsers();

      // Search
      let searchTimeout;
      document.getElementById('searchInput').addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
          currentPage = 1;
          loadUsers();
        }, 300);
      });

      // Filters
      document.getElementById('roleFilter').addEventListener('change', () => { currentPage = 1; loadUsers(); });
      document.getElementById('statusFilter').addEventListener('change', () => { currentPage = 1; loadUsers(); });
      document.getElementById('resetFilters').addEventListener('click', () => {
        document.getElementById('searchInput').value = '';
        document.getElementById('roleFilter').value = '';
        document.getElementById('statusFilter').value = '';
        currentPage = 1;
        loadUsers();
      });

      // Role form
      document.getElementById('roleForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        if (!selectedUserId) return;

        try {
          const response = await Api.put(`/users/${selectedUserId}/role`, {
            role: document.getElementById('newRole').value
          });

          if (response.success) {
            App.showToast('Role updated successfully', 'success');
            bootstrap.Modal.getInstance(document.getElementById('roleModal')).hide();
            loadUsers();
          } else {
            App.showToast(response.message || 'Failed to update role', 'error');
          }
        } catch (error) {
          App.showToast(error.message || 'An error occurred', 'error');
        }
      });
    });

    async function loadUsers() {
      const tableBody = document.getElementById('usersTableBody');
      
      try {
        const params = {
          page: currentPage,
          limit: 10
        };
        
        const search = document.getElementById('searchInput').value;
        const role = document.getElementById('roleFilter').value;
        const isActive = document.getElementById('statusFilter').value;
        
        if (search) params.search = search;
        if (role) params.role = role;
        if (isActive) params.isActive = isActive;

        const response = await Api.get('/users', params);

        if (response.success) {
          if (response.data.length > 0) {
            tableBody.innerHTML = response.data.map(user => `
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 36px; height: 36px;">
                      ${user.avatar 
                        ? `<img src="${user.avatar}" class="rounded-circle" style="width: 100%; height: 100%; object-fit: cover;">`
                        : `<i class="bi bi-person text-primary"></i>`
                      }
                    </div>
                    <span class="fw-medium">${App.escapeHtml(user.name)}</span>
                  </div>
                </td>
                <td>${App.escapeHtml(user.email)}</td>
                <td><span class="badge bg-${getRoleBadgeColor(user.role)}">${user.role}</span></td>
                <td>
                  <span class="badge bg-${user.isActive ? 'success' : 'secondary'}">
                    ${user.isActive ? 'Active' : 'Inactive'}
                  </span>
                </td>
                <td><small class="text-muted">${user.lastLogin ? App.formatDate(user.lastLogin) : 'Never'}</small></td>
                <td><small class="text-muted">${App.formatDate(user.createdAt)}</small></td>
                <td class="text-end">
                  <div class="btn-group btn-group-sm">
                    <button type="button" class="btn btn-outline-primary" title="Change Role" onclick="openRoleModal('${user._id}', '${App.escapeHtml(user.name)}', '${user.role}')">
                      <i class="bi bi-person-gear"></i>
                    </button>
                    ${user.isActive 
                      ? `<button type="button" class="btn btn-outline-warning" title="Deactivate" onclick="toggleUserStatus('${user._id}', false)">
                          <i class="bi bi-pause-circle"></i>
                        </button>`
                      : `<button type="button" class="btn btn-outline-success" title="Activate" onclick="toggleUserStatus('${user._id}', true)">
                          <i class="bi bi-play-circle"></i>
                        </button>`
                    }
                    <button type="button" class="btn btn-outline-danger" title="Delete" onclick="deleteUser('${user._id}', '${App.escapeHtml(user.name)}')">
                      <i class="bi bi-trash"></i>
                    </button>
                  </div>
                </td>
              </tr>
            `).join('');

            renderPagination(response.pagination);
          } else {
            tableBody.innerHTML = `
              <tr>
                <td colspan="7" class="text-center py-5">No users found</td>
              </tr>
            `;
          }
        }
      } catch (error) {
        tableBody.innerHTML = `
          <tr>
            <td colspan="7" class="text-center py-5 text-danger">Failed to load users</td>
          </tr>
        `;
      }
    }

    function getRoleBadgeColor(role) {
      const colors = { admin: 'danger', manager: 'warning', user: 'primary' };
      return colors[role] || 'secondary';
    }

    function renderPagination(pagination) {
      const el = document.getElementById('pagination');
      const { currentPage: page, totalPages } = pagination;
      if (totalPages <= 1) { el.innerHTML = ''; return; }

      let html = `<li class="page-item ${page === 1 ? 'disabled' : ''}">
        <a class="page-link" href="#" onclick="goToPage(${page - 1}); return false;">Previous</a>
      </li>`;
      
      for (let i = 1; i <= totalPages; i++) {
        if (i === 1 || i === totalPages || (i >= page - 2 && i <= page + 2)) {
          html += `<li class="page-item ${i === page ? 'active' : ''}">
            <a class="page-link" href="#" onclick="goToPage(${i}); return false;">${i}</a>
          </li>`;
        } else if (i === page - 3 || i === page + 3) {
          html += `<li class="page-item disabled"><span class="page-link">...</span></li>`;
        }
      }

      html += `<li class="page-item ${page === totalPages ? 'disabled' : ''}">
        <a class="page-link" href="#" onclick="goToPage(${page + 1}); return false;">Next</a>
      </li>`;
      
      el.innerHTML = html;
    }

    function goToPage(page) {
      currentPage = page;
      loadUsers();
    }

    function openRoleModal(userId, userName, currentRole) {
      selectedUserId = userId;
      document.getElementById('roleUserName').textContent = userName;
      document.getElementById('newRole').value = currentRole;
      new bootstrap.Modal(document.getElementById('roleModal')).show();
    }

    async function toggleUserStatus(userId, activate) {
      const endpoint = activate ? 'activate' : 'deactivate';
      try {
        const response = await Api.put(`/users/${userId}/${endpoint}`);
        if (response.success) {
          App.showToast(`User ${activate ? 'activated' : 'deactivated'} successfully`, 'success');
          loadUsers();
        } else {
          App.showToast(response.message || 'Operation failed', 'error');
        }
      } catch (error) {
        App.showToast(error.message || 'An error occurred', 'error');
      }
    }

    async function deleteUser(userId, userName) {
      if (!confirm(`Are you sure you want to delete user "${userName}"?`)) return;
      
      try {
        const response = await Api.delete(`/users/${userId}`);
        if (response.success) {
          App.showToast('User deleted successfully', 'success');
          loadUsers();
        } else {
          App.showToast(response.message || 'Failed to delete user', 'error');
        }
      } catch (error) {
        App.showToast(error.message || 'An error occurred', 'error');
      }
    }
  </script>
</body>
</html>
